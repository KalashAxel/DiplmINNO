import numpy as np
import matplotlib.pyplot as plt

def save_table_png(df_table, filename, title=None, max_rows=20):
    df_small = df_table.copy()
    if len(df_small) > max_rows:
        df_small = df_small.head(max_rows)

    # округлим красиво
    for col in df_small.columns:
        if np.issubdtype(df_small[col].dtype, np.number):
            df_small[col] = df_small[col].map(lambda x: round(x, 4))

    fig, ax = plt.subplots()
    ax.axis("off")
    if title:
        ax.set_title(title)

    tbl = ax.table(
        cellText=df_small.values,
        colLabels=df_small.columns,
        cellLoc="center",
        loc="center"
    )
    tbl.auto_set_font_size(False)
    tbl.set_fontsize(9)
    tbl.scale(1, 1.2)

    out = FIG_DIR / filename
    plt.savefig(out, dpi=300, bbox_inches="tight")
    plt.show()
    print("Saved:", out)

